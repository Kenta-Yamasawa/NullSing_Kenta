<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/target"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/menu_home_l"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#1b2538"
                android:src="@drawable/ic_home_home_24dp"/>

            <TextView
                android:id="@+id/menu_home"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/bottom_tab_text_size"
                android:background="#1b2538"
                android:gravity="center_horizontal|center_vertical"
                android:text="ホーム"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_myList_l"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#1b2538"
                android:src="@drawable/ic_format_list_bulleted_white_24dp"/>

            <TextView
                android:id="@+id/menu_myList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/bottom_tab_text_size"
                android:background="#1b2538"
                android:gravity="center_horizontal|center_vertical"
                android:text="曲の閲覧"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_addList_l"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#1b2538"
                android:src="@drawable/ic_add_box_white_24dp"/>

            <TextView
                android:id="@+id/menu_addList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/bottom_tab_text_size"
                android:background="#1b2538"
                android:gravity="center_horizontal|center_vertical"
                android:text="曲の追加"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_matching_l"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#1b2538"
                android:src="@drawable/ic_autorenew_white_24dp"/>

            <TextView
                android:id="@+id/menu_matching"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/bottom_tab_text_size"
                android:background="#1b2538"
                android:gravity="center_horizontal|center_vertical"
                android:text="マッチング"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>