<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00FFFFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#1b2538"
            android:gravity="center_horizontal|center_vertical"
            android:text="ぬるカラオケ"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="#00FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:background="#00FFFFFF"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="40dp"
                android:text="ぬるカラオケへようこそ！" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#00FFFFFF"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="1.  " />
                <LinearLayout
                    android:id="@+id/menu_addList2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#1b2538"
                        android:src="@drawable/ic_add_box_white_24dp"/>
                    <TextView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#1b2538"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:text="曲の追加" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="#00FFFFFF"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="  から知っている曲を追加しましょう！" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#00FFFFFF"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#00FFFFFF"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="2. お友達を誘って、  " />
                <LinearLayout
                    android:id="@+id/menu_matching2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#1b2538"
                        android:src="@drawable/ic_autorenew_white_24dp"/>
                    <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#1b2538"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:text="マッチング" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#00FFFFFF"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="  を押してください" />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/bottom_tab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>