<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#1b2538"
            android:gravity="center_horizontal|center_vertical"
            android:text="ぬるカラオケ"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:background="#ffffff"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_margin="40dp"
                android:text="ぬるカラオケへようこそ！" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="1.  " />
                <TextView
                    android:id="@+id/menu_addList2"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#1b2538"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:text="曲の追加" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="  から知っている曲を追加しましょう！" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="2. お友達を誘って、  " />
                <TextView
                    android:id="@+id/menu_matching2"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#1b2538"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:text="マッチング" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="  を押してください" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/target"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1b2538"
                    android:src="@drawable/ic_home_home_24dp"/>

                <TextView
                    android:id="@+id/menu_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1b2538"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="ホーム"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1b2538"
                    android:src="@drawable/ic_format_list_bulleted_white_24dp"/>

                <TextView
                    android:id="@+id/menu_myList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#1b2538"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="曲の閲覧"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1b2538"
                    android:src="@drawable/ic_add_box_white_24dp"/>

                <TextView
                    android:id="@+id/menu_addList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#1b2538"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="曲の追加"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1b2538"
                    android:src="@drawable/ic_autorenew_white_24dp"/>

                <TextView
                    android:id="@+id/menu_matching"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#1b2538"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="マッチング"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>